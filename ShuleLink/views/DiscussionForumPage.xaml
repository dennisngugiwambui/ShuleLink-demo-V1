<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ShuleLink.Views.DiscussionForumPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Discussion Forum"
             BackgroundColor="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="#4A90E2" HasShadow="True" CornerRadius="0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Text="â† Back" 
                        BackgroundColor="Transparent" 
                        TextColor="White" 
                        FontSize="16"
                        Clicked="OnBackClicked" />

                <StackLayout Grid.Column="1" Orientation="Vertical" HorizontalOptions="Center">
                    <Label Text="ðŸ’¬ Discussion Forum" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center" />
                    <Label Text="Share ideas, ask questions, debate topics" 
                           FontSize="14" 
                           TextColor="#E8F4FD" 
                           HorizontalOptions="Center" />
                </StackLayout>

                <Button Grid.Column="2" 
                        Text="+ New Post" 
                        BackgroundColor="#27AE60" 
                        TextColor="White" 
                        FontSize="14"
                        CornerRadius="15"
                        Padding="15,8"
                        Clicked="OnNewPostClicked" />
            </Grid>
        </Frame>

        <!-- Category Filter -->
        <ScrollView Grid.Row="1" Orientation="Horizontal" Padding="15,10">
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button x:Name="AllCategoryBtn" Text="All" BackgroundColor="#4A90E2" TextColor="White" 
                        FontSize="12" CornerRadius="15" Padding="15,8" Clicked="OnCategorySelected" />
                <Button x:Name="MathCategoryBtn" Text="ðŸ“Š Math" BackgroundColor="#E8F4FD" TextColor="#4A90E2" 
                        FontSize="12" CornerRadius="15" Padding="15,8" Clicked="OnCategorySelected" />
                <Button x:Name="ScienceCategoryBtn" Text="ðŸ”¬ Science" BackgroundColor="#E8F4FD" TextColor="#4A90E2" 
                        FontSize="12" CornerRadius="15" Padding="15,8" Clicked="OnCategorySelected" />
                <Button x:Name="EnglishCategoryBtn" Text="ðŸ“š English" BackgroundColor="#E8F4FD" TextColor="#4A90E2" 
                        FontSize="12" CornerRadius="15" Padding="15,8" Clicked="OnCategorySelected" />
                <Button x:Name="GeneralCategoryBtn" Text="ðŸ’­ General" BackgroundColor="#E8F4FD" TextColor="#4A90E2" 
                        FontSize="12" CornerRadius="15" Padding="15,8" Clicked="OnCategorySelected" />
                <Button x:Name="HomeworkCategoryBtn" Text="ðŸ“ Homework Help" BackgroundColor="#E8F4FD" TextColor="#4A90E2" 
                        FontSize="12" CornerRadius="15" Padding="15,8" Clicked="OnCategorySelected" />
            </StackLayout>
        </ScrollView>

        <!-- Discussion Posts -->
        <RefreshView Grid.Row="2" x:Name="PostsRefreshView" Refreshing="OnRefresh">
            <CollectionView x:Name="PostsCollectionView" 
                            BackgroundColor="Transparent"
                            SelectionMode="Single"
                            SelectionChanged="OnPostSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="15,10">
                            <Frame BackgroundColor="White" 
                                   HasShadow="True" 
                                   CornerRadius="12" 
                                   Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Post Header -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Frame Grid.Column="0" 
                                               BackgroundColor="#4A90E2" 
                                               CornerRadius="15" 
                                               Padding="8,4" 
                                               HasShadow="False">
                                            <Label Text="{Binding Category}" 
                                                   TextColor="White" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold" />
                                        </Frame>

                                        <StackLayout Grid.Column="1" Spacing="2" Margin="10,0,0,0">
                                            <Label Text="{Binding AuthorName}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" 
                                                   TextColor="#2C3E50" />
                                            <Label Text="{Binding AuthorType}" 
                                                   FontSize="12" 
                                                   TextColor="#7F8C8D" />
                                        </StackLayout>

                                        <Label Grid.Column="2" 
                                               Text="{Binding CreatedAt, StringFormat='{0:MMM dd, HH:mm}'}" 
                                               FontSize="12" 
                                               TextColor="#95A5A6" 
                                               VerticalOptions="Center" />
                                    </Grid>

                                    <!-- Post Title -->
                                    <Label Grid.Row="1" 
                                           Text="{Binding Title}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="#2C3E50" 
                                           Margin="0,10,0,5" />

                                    <!-- Post Content Preview -->
                                    <Label Grid.Row="2" 
                                           Text="{Binding Content}" 
                                           FontSize="14" 
                                           TextColor="#34495E" 
                                           MaxLines="3" 
                                           LineBreakMode="TailTruncation" 
                                           Margin="0,0,0,10" />

                                    <!-- Post Stats -->
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="15">
                                            <StackLayout Orientation="Horizontal" Spacing="5">
                                                <Label Text="ðŸ‘" FontSize="14" />
                                                <Label Text="{Binding Likes}" FontSize="12" TextColor="#7F8C8D" />
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal" Spacing="5">
                                                <Label Text="ðŸ’¬" FontSize="14" />
                                                <Label Text="{Binding Replies}" FontSize="12" TextColor="#7F8C8D" />
                                            </StackLayout>
                                        </StackLayout>

                                        <Label Grid.Column="1" 
                                               Text="ðŸ“Œ" 
                                               FontSize="16" 
                                               IsVisible="{Binding IsSticky}" 
                                               TextColor="#E74C3C" 
                                               Margin="10,0" />

                                        <Label Grid.Column="2" 
                                               Text="ðŸ”’" 
                                               FontSize="16" 
                                               IsVisible="{Binding IsLocked}" 
                                               TextColor="#95A5A6" />
                                    </Grid>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <ActivityIndicator x:Name="LoadingIndicator" 
                           Grid.Row="2" 
                           IsVisible="False" 
                           IsRunning="False" 
                           Color="#4A90E2" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>
